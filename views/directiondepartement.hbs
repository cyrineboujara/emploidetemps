    <script>
        function showSelectionOptions() {
            document.getElementById('timetable-selection-options').style.display = 'block';
        }

        function showDepartmentSelection() {
            document.getElementById('department-selection').style.display = 'block';
            document.getElementById('teacher-selection').style.display = 'none';
            document.getElementById('room-selection').style.display = 'none';
        }

        function showTeacherSelection() {
            document.getElementById('teacher-selection').style.display = 'block';
            document.getElementById('department-selection').style.display = 'none';
            document.getElementById('room-selection').style.display = 'none';
        }

        function showRoomSelection() {
            document.getElementById('room-selection').style.display = 'block';
            document.getElementById('department-selection').style.display = 'none';
            document.getElementById('teacher-selection').style.display = 'none';
        }
    </script>
