        <!-- Forms for Department, Teacher, and Room selections -->
       <!-- Formulaire pour sélectionner Département et Classe -->
<div id="department-selection">
    <h4>Sélectionner Département et Classe</h4>
    <div class="form-group">
        <select id="department-select" onchange="updateClassOptions()">
            <option value="TI">Technologie Informatique</option>
            <option value="GE">Génie Électrique</option>
            <option value="GM">Génie Mécanique</option>
            <option value="GC">Génie Civil</option>
        </select>
    </div>
    <div class="form-group">
        <select id="class-select">
            <!-- Les options de classe seront mises à jour dynamiquement -->
        </select>
    </div>
    <button class="btn btn-primary">Soumettre</button>
</div>

<script>
    function updateClassOptions() {
        const department = document.getElementById('department-select').value;
        const classSelect = document.getElementById('class-select');

        // Effacer les options précédentes
        classSelect.innerHTML = '';

        let options = [];
        if (department === 'TI') {
            options = ['TI', 'DSI', 'RSI'];
        } else if (department === 'GE') {
            options = ['GE', 'EI'];
        } else if (department === 'GM') {
            options = ['GM', 'MI'];
        } else if (department === 'GC') {
            options = ['GC', 'BAT'];
        }

        // Ajouter les nouvelles options
        options.forEach(option => {
            const opt = document.createElement('option');
            opt.value = option;
            opt.textContent = option;
            classSelect.appendChild(opt);
        });
    }
</script>


        <div id="teacher-selection">
